  lda #$01
  sta curr_keys ;store bit to set the carry later
  sta $4016
  lsr a
  sta $4016
pad_read_loop:
  lda $4016
  and #%00000001 ;only bit 0 matters
  cmp #1 ;if value of a is = to or greater
         ;than 1 set carry
  rol curr_keys 
  bcc pad_read_loop ;branch when leftmost bit sets
                    ;carry
  
  










