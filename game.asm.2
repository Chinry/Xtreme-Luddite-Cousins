  lda note_playing 
  beq skip_play_note
  ldx note
  lda periodTableHi,x
  sta $4003
  lda periodTableLo,x
  sta $4002
  lda #%10111111
  sta $4000
  dec note_playing
  bne skip_play_note
  inc resting
  lda #5
  sta rest_timer
